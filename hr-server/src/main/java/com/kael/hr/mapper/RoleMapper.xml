<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kael.hr.mapper.RoleMapper">
    <resultMap id="roleMap" type="com.kael.hr.entity.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="name_zh" property="nameZh" />
    </resultMap>

    <select id="findRolesByUsername" resultMap="roleMap">
        SELECT
            role.*
        FROM
            user
                inner join
            user_role ON user.id = user_role.user_id
                left join
            role on user_role.role_id = role.id
        WHERE
            user.username = #{username};
    </select>

    <select id="findAllRoles" resultMap="roleMap">
        select * from role
    </select>

    <insert id="saveRole">
        insert into role (name,name_zh) value (#{role.name}, #{role.nameZh})
    </insert>

    <delete id="deleteRole">
        delete from role where id = #{id}
    </delete>

    <select id="getCountUserByRole" resultType="int">
        select count(*) from user_role where role_id = #{id}
    </select>
</mapper>